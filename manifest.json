{
    "name": "shout",
    "id": "shout",
    "description": {
        "en": "A multi-user web IRC client"
    },
    "licence": "GPL-3",
    "developer": {
        "name": "Matanya Moses",
        "email": "matanya@foss.co.il"
    },
    "multi_instance": "false",
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "ask": {
                    "en": "Choose a domain for shout"
                },
                "example": "example.com"
            },
            {
                "name": "path",
                "ask": {
                    "en": "Choose a path for shout"
                },
                "default": "/"
            },
            {
                "name": "public_site",
                "ask": {
                    "en": "Can guest users access this chat?",
                    "fr": "Les utilisateurs non-enregistrés peuvent-ils accéder à ce chat ?"
                },
                "choices": ["Yes", "No"],
                "default": "Yes"
            }
        ]
    }
}

